{
	"httpServer": {
		"host": "+",
		"port": "8881",
		"requestQueueLength": 1000,
		"maxConnections": 0,
		"allowCORSFrom": "*",
		"inetPub": "./inetPub/",
		"threadPoolSize": 2
	},
	"logging": {
		"path": "./logs",
		"levels": [
			"*"
		],
		"stackTrackDepth": 20,
		"rotationSizeInMB": 100,
		"performanceCounters": false
	},
	"javascript": {
		"timeout": -1,
		"lifetimeInMinutes": 1000,
		"fullGCPeriod": 100,
		"maxPerEngineMemory": 512,
		"maxRecursionDepth": 32
	},
	"security": {
		"authenticationMethods": [
			"UB", "Negotiate","CERT2"
		],
		"simpleCertAuth": true,
		"dstu": {
			"findCertificateBySerial": true,
			"iit": {
				"libraryPath": "./node_modules/@ub-d/iit-libbin/bin/x86_64_nix",
				"librarySettings": "./.key",
				"keyPath": "./.key/Key-6.dat",
				"password": "%KEY_PWD%"
			}
		}
	},
	"uiSettings": {
		"adminUI": {
			"applicationName": {"en": "Autotest UB SQLITE", "uk": "Автотест UB SQLITE"},
			"applicationTitle": "AdminUI",
			"defaultPasswordForDebugOnly": "admin",
			"themeName": "UBGrayTheme",
			"loginWindowTopLogoURL": "/models/ub-pub/img/login-logo.svg",
			"endpoint": "ubadminui",
			//"encryptionImplementation": "@ub-d/uac-crypto/dist/uac-crypto.min.js", //prod
			"encryptionImplementation": "/clientRequire/@ub-d/iit-sign-web/dist/iit-sign-web.min.js",
			"authenticationCert": {
			    "requireUserName": false
			},
			"allowCertificateProlongation": true,
			//"encryptionImplementation": "@ub-d/uac-crypto", // adminui dev
			"messenger": {
				"enabled": true,
				"checkInterval": 30
			},
			"linter": { "asi": true, "sub": true }
		},
		"portalUI": {
			"applicationName": "UBCore usage"
		}
	},
	"application": {
		"defaultLang": "en",
		"rootHandler": "index.html",
		"schedulers": {"enabled": false},
		"domain": {
			"models": [
				{
					"path": "./node_modules/@unitybase/ub"
				},
				{
					"path": "./node_modules/@unitybase/uba"
				},
				{
					"path": "./node_modules/@unitybase/ubs"
				},
				{
					"path": "./node_modules/@unitybase/ubm"
				},
				{
					"path": "./node_modules/@unitybase/ubq"
				},
				{
					"path": "./node_modules/@unitybase/cdn"
				},
				{
					"path": "./node_modules/@unitybase/org"
				},
				{
					"path": "./node_modules/@unitybase/ub-pub"
				},
				{
					"path": "./node_modules/@unitybase/adminui-pub"
				},
				{
					"path": "./node_modules/@unitybase/adminui-reg"
				},
				{
					"path": "./node_modules/@unitybase/adminui-vue"
				},
				{
					//"name": "TST",
					"path": "./models/TST"
				}/*, {
					"path": "./models/CRT"
				}*/
			],
			"implicitlyAddedMixins": [
				"audit"
			]
		},
		"fts": {
			"enabled": true,
			"async": false
		},
		"connections": [
			{
				"name": "main",
				"driver": "SQLite3",
				"isDefault": true,
				"dialect": "SQLite3",
				"databaseName": "./autotestDB.sqlite3",
				"supportLang": ["en", "uk"],
				"advSettings": "Synchronous=Off"
			},
			{
				"name": "ftsDefault",
				"driver": "SQLite3",
				"dialect": "SQLite3",
				"databaseName": "./autotestFTS.sqlite3",
				"supportLang": [
					"en", "uk"
				],
				//"advSettings": "Synchronous=Off"
				"advSettings": "Synchronous=Off,Tokenizer=stemka"
			},
			{
				"name": "ftsSubjectSearch",
				"driver": "SQLite3",
				"dialect": "SQLite3",
				"databaseName": "./autotestSubjectsFTS.sqlite3",
				"supportLang": [
					"en", "uk"
				],
				//"advSettings": "Synchronous=Off"
				"advSettings": "Synchronous=Off,Tokenizer=stemka"
			}
		],
		"blobStores": [
			{
				"name": "mdb",
				"storeType": "Virtual",
				"tempPath": "./_temp"
			},
			{
				"name": "simple",
				"path": "./documents/simple",
				"tempPath": "./documents/simple/_temp",
				"isDefault": true,
				"historyDepth": 2,
				"storeSize": "Medium",
				"keepOriginalFileNames": false
			},
			{
				"name": "avatars",
				"path": "./documents/avatars",
				"tempPath": "./documents/avatars/_temp",
				"historyDepth": 0,
				"storeSize": "Simple",
				"keepOriginalFileNames": false
			}
		],
		"customSettings": {
			/*"cryptoService": {
 			  "trustedCACertificatesPath": "./trustedCerts",
			  "tspServers": ["http://acsk.privatbank.ua/services/tsp/", "http://ca.informjust.ua/services/tsp/"],
			  "cmpServers": ["http://acsk.privatbank.ua/services/cmp","http://uakey.com.ua/services/cmp", "http://ca.informjust.ua/services/cmp/", "http://ca.mvs.gov.ua/services/cmp", "http://ca.ksystems.com.ua/services/cmp", "http://acskidd.gov.ua/services/cmp/"],

			  //"tspServers": ["http://ca.informjust.ua/services/tsp/"],
			  //"cmpServers": ["http://acskidd.gov.ua/services/cmp/","http://ca.informjust.ua/services/cmp/"],
			  //"cmpServers": ["http://uakey.com.ua/services/cmp/","http://ca.informjust.ua/services/cmp/","http://acskidd.gov.ua/services/cmp/"],
			  "useIITCMP": true
			},*/
			"mailerConfig": {
				"targetHost": "mail.softline.main",
				"targetPort": "25",
				"fromAddr": "no-reply@softline.kiev.ua",
				"user": "",
				"password": "",
				"autoTLS": false,
				"auth": false
			}
		}
	}
}
