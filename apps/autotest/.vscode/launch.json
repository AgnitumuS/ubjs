{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "attach",
            "name": "SyNode",
            "addonType": "webExtension",
            "addonPath": "${workspaceRoot}/",
            "host": "127.0.0.1",
            "port": 6000,
            "sourceMaps": "client",
            "log": {
                "fileName": "${workspaceFolder}/vscode-firefox-debug.log",
                "fileLevel": {
                    "default": "Debug"
                },
                "consoleLevel": {
                    "default": "Debug"
                }
            }
        }
    ]
}